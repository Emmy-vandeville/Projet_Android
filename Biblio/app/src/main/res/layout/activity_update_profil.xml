<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UpdateProfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userNameUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="newUserName"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="24dp"
                android:text="Mettre Ã  jour le nom d'utilisateur" />

            <EditText
                android:id="@+id/mailCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="mail actuel"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <EditText
                android:id="@+id/actuelMdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="mot de passe"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <EditText
                android:id="@+id/modifierEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="nouvel email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <Button
                android:id="@+id/buttonChangerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="24dp"
                android:text="Changer l'email" />

            <EditText
                android:id="@+id/ancienMdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Ancien Mot de passe"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <EditText
                android:id="@+id/mailActuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Adresse Mail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <EditText
                android:id="@+id/nouveauMdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="nouveau mot de passe"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="#B2EBF2"
                android:textColorHint="#B2EBF2" />

            <Button
                android:id="@+id/buttonChangerMdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"
                android:text="Changer le mot de passe" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>